{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mixed (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/spline_demo",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
      //"preLaunchTask": "Build Fortran+C",
      "logging": {
        "moduleLoad": false,
        "trace": false,
        "engineLogging": false,
        "programOutput": true,
        "exceptions": false
      }
    },
    {
        "name": "Intel Debug Attach",
        //"type": "cppvsdbg",
        "request": "attach",
        "processId": "${command:pickProcess}"
    }

  ]
}

